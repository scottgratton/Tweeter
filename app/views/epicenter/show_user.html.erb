<h1><%= current_user.username.capitalize %>'s profile</h1>

<h2> <%= @user.name %></h2>

<p>
<strong>Bio:</strong>
<%= @user.bio %>
</p>

<% @user.tweets.each do |tweet| %>
<div class="container well">
<%= tweet.user.name %>
<%= tweet.user.username %>
<p>
  <%= tweet.message %>
</p>
</div>
<% end %>
